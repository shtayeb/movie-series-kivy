<MyMDCard>
    size_hint_y: None
    height: "180dp"
    width: "220dp"
    padding: "8dp"
    GridLayout:  
        cols: 1
        adaptive_height: True
        padding: dp(4), dp(4)
        spacing: dp(8)

        MDCard:
            GridLayout:
                cols:2
                AsyncImage:
                    id :mymdcard_image
                    source:root.img
                GridLayout:
                    cols:1
                    MDLabel:
                        id: mymdcard_title
                        text: root.title
                        theme_text_color: "Primary"
                        size_hint_y: 1
                        height: self.texture_size[1]
                    MDLabel:
                        id : mymdcard_info
                        text: root.info
                        theme_text_color: "Secondary"
                    GridLayout:
                        cols:3
                        padding: dp(14), dp(4)
                        spacing:dp(8)
                        MDTextButton:
                            text: "Delete"
                            on_release : app.shahryar.change_screen("home")
                        MDTextButton:
                            text: "Update"
                            on_release : app.shahryar.change_screen("home")
                        MDTextButton:
                            text: "view"
                            on_release : app.shahryar.change_screen("home")
    