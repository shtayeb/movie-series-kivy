#:kivy 2.0.0
#:import Animation kivy.animation.Animation
#:import effect kivy.uix.effectwidget.EffectWidget
#:import HorizontalBlurEffect kivy.uix.effectwidget.HorizontalBlurEffect
#:import VerticalBlurEffect kivy.uix.effectwidget.VerticalBlurEffect

MDScreen:
    name: "login"
    blur: 0

    EffectWidget:
        effects: (HorizontalBlurEffect(size=root.blur), VerticalBlurEffect(size=root.blur), )
        Image:
            pos: root.pos
            size: root.width * 0.5, root.height
            source: "./icons/bg.png"
            allow_stretch: True
            keep_ratio: False
        

    MDLabel:
        text: 'Shahryar Tayeb'
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"

    MDLabel:
        text: "Log in"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
        
    MDTextField:
        hint_text: "Username or Email"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: .75,0.085
        # mode: "rectangle"
    
    MDTextField:
        hint_text: "Password"
        pos_hint: {"center_x":0.5, "center_y":0.57}
        size_hint: .75,0.085
        password: True
        # mode: "rectangle"
    
    MDRaisedButton:
        text: "Login"
        pos_hint: {"center_x": 0.5, "center_y":0.48}
        size_hint: .7,0.05
        on_release: app.shahryar.change_screen("home")
    
    MDTextButton:
        text: "Forgot password?"
        pos_hint: {"center_x":0.5, "center_y":0.4}
        on_release: app.shahryar.change_screen("forgot")

    MDTextButton:
        text: f"[color=#000000]Don't have an account?[/color] Sign up"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.33}
        on_release: app.shahryar.change_screen("signup")
    
    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]Shahryar 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        